@model RegisterVM;
@{
    ViewData["Title"] = "Registro de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card bg-dark">
    <div class="card-body">
        <h3 class="card-title text-white text-center">Registro de usuario</h3>
        <form asp-controller="Users" asp-action="Register" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="row mt-4">
                <div class="col-sm-6">

                    <div class="mb-3">
                        <label asp-for="Name" class="col-md-2 text-white"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ingresa tu nombre" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Lastname" class="col-md-2 text-white"></label>
                        <input asp-for="Lastname" class="form-control" placeholder="Ingresa tus apellidos" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Username" class="col-md-2 text-white"></label>
                        <input asp-for="Username" class="form-control" placeholder="Ingresa tu nombre de usuario" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2 text-white"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Country" class="col-md-2"></label>
                        <input asp-for="Country" class="form-control" placeholder="Ingresa tu url" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CountryCode" class="col-md-2 text-white"></label>
                        <input asp-for="CountryCode" class="form-control" placeholder="Ingresa el código de tu país" />
                        <span asp-validation-for="CountryCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-6">

                    <div class="mb-3">
                        <label asp-for="City" class="col-md-2 text-white"></label>
                        <input asp-for="City" class="form-control" placeholder="Ingresa tu ciudad" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="col-md-4 text-white"></label>
                        <input asp-for="DateOfBirth" class="form-control" id="datepicker" placeholder="Ejemplo: 1990-10-05" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2 text-white"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="col-md-4 text-white"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Ingresa la confirmación de contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="col-md-2 text-white"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Ingresa tu teléfono" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-10 offset-2">
                    <button type="submit" class="btn btn-success w-75 btn-lg">Registrarse</button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

