@model ChangePasswordVM

@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager;

@{
    ViewData["Title"] = "Cambiar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card bg-dark">
    <div class="card-body">
        <h3 class="card-title text-white text-center">Cambiar contraseña</h3>
        <form asp-controller="Users" asp-action="ChangePassword" method="post">

            <input type="hidden" name="id" value="@UserManager.GetUserId(User)" />

            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="row mt-4">
                <div class="col-sm-6 offset-3">

                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2 text-white"></label>
                        <input asp-for="Password" class="form-control" placeholder="Enter new password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="col-md-2 text-white"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                </div>

            </div>

            <div class="row">
                <div class="col-sm-10 offset-2">
                    <button type="submit" class="btn btn-info w-75 btn-lg text-white">Change Password <i class="bi bi-arrow-right-circle-fill"></i></button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

